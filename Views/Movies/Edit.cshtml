@model Project02.Models.Movie

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Movie";
    
}

<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <form asp-action="Edit">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            A form to change the value in the database
                        </h3>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Movie_ID" />
                        <input type="hidden" asp-for="Movie_Slug"/>
                        <div class="form-group">
                            <label class="control-label my-1"><strong>Name</strong></label>
                            <input asp-for="Movie_Name" class="form-control" />
                            <span asp-validation-for="Movie_Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label my-1"><strong>Description</strong></label>
                            <textarea class="form-control" asp-for="Movie_Description" rows="5" cols="40"></textarea>
                            <span asp-validation-for="Movie_Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label my-1"><strong>Duration</strong></label>
                            <input asp-for="Movie_Duration" class="form-control" />
                            <span asp-validation-for="Movie_Duration" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label my-1"><strong></strong></label>
                            <input type="file" asp-for="Movie_Poster" class="form-control" />
                            <span asp-validation-for="Movie_Poster" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Movie_Status">Status</label>
                            <select asp-for="Movie_Status" class="form-select">
                                <option value="Publish">Publish</option>
                                <option value="Unpublish">Unpublish</option>
                            </select>
                            <span asp-validation-for="Movie_Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
