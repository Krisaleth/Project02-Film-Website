@using Project02.ViewModels.Seat
@model SeatCreateVm
@{
    ViewData["Title"] = "New Seat";
    Layout = "_AdminLayout";
}


<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            Add new seat
                        </h3>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Hall_ID" class="control-label my-1"></label>
                            <select asp-for="Hall_ID" class="form-select" asp-items="ViewBag.Hall_ID"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="RowNumber" class="control-label my-1"></label>
                            <input asp-for="RowNumber" class="form-control" />
                            <span asp-validation-for="RowNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SeatNumber" class="control-label my-1"></label>
                            <input asp-for="SeatNumber" class="form-control" />
                            <span asp-validation-for="SeatNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SeatType" class="control-label my-1"></label>
                            <select asp-for="SeatType" asp-items="(SelectList)ViewBag.SeatType" class="form-select"></select>
                            <span asp-validation-for="SeatType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-outline-secondary float-end">Back to List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
