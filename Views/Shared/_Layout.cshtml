<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project02</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project02.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="simple-navbar navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="#">TKT Team</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon text-white"><i class="fa-solid fa-caret-down"></i></span>
            </button>

            <div class="navbar-collapse collapse navbar-dark">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="text-white nav-item mx-2"><a href="#" class="nav-link">Thể loại</a></li>
                    <li class="text-white nav-item mx-2"><a href="#" class="nav-link">Tất cả film</a></li>
                    <li class="text-white nav-item mx-2"><a href="#" class="nav-link">Điều khoản</a></li>
                    <li class="text-white nav-item mx-2"><a href="#" class="nav-link">Về chúng tôi</a></li>
                    <li class="text-white nav-item mx-2"><a href="#" class="nav-link">Trang cá nhân</a></li>
                </ul>

                <form class="navbar-search d-flex" method="get" action="#">
                    <input type="text" class="form-control me-2" name="q" placeholder="Tìm kiếm phim..." />
                    <button type="submit" aria-label="Tìm kiếm">
                        <span class="search-icon btn btn-secondary">&#128269;</span>
                    </button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Project02 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
