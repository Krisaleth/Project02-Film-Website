@using System.Text.Json
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project02.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/global.css" />
    <link type="text/css" href="~/css/popup.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index:2000;">
            <div class="toast align-items-center bg-success border-0 show" style="min-width:300px;" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">@TempData["SuccessMessage"]</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>
        <script>
            setTimeout(() => document.querySelector('.toast')?.remove(), 4000);
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index:2000;">
            <div class="toast align-items-center bg-danger border-0 show"
                 style="min-width:300px;" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">@TempData["ErrorMessage"]</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>

        <script>
            setTimeout(() => document.querySelector('.toast.text-bg-danger')?.remove(), 4000);
        </script>
    }
    <header>
        <!-- ===== NAVBAR ===== -->
        <nav class="simple-navbar navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">🎬 TKT Cinema</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu"
                        aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown mx-2">
                            <a href="#" class="nav-link dropdown-toggle" id="genreDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Thể loại
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="genreDropdown">
                                @await Component.InvokeAsync("Genre")
                            </ul>
                        </li>

                        <li class="nav-item mx-2"><a asp-action="Index" asp-controller="UserMovie" class="nav-link">Tất cả phim</a></li>
                        <li class="nav-item mx-2"><a href="/privacy" class="nav-link">Điều khoản</a></li>
                        <li class="nav-item mx-2"><a href="/about" class="nav-link">Về chúng tôi</a></li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("User"))
                        {
                            <li class="nav-item dropdown mx-2">
                                <a href="#" class="nav-link dropdown-toggle" id="genreDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Xin chào, @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item text-decoration-none text-secondary" href="/profile">Trang cá nhân</a></li>
                                    <li>
                                        <form method="post" asp-action="Logout" asp-controller="User" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item btn btn-link p-0 m-0 text-secondary">
                                                <span class="ms-3">Đăng xuất</span>
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item mx-2"><a href="/login" class="nav-link">Đăng nhập</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-5" style="padding-bottom: 450px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer py-5" style="background: #0f0f0f; border-top: 2px solid #e50914;">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="fw-bold text-danger mb-3">🎬 TKT Cinema</h5>
                    <p class="text-muted small" style="white-space: normal; word-wrap: break-word">
                        TKT Cinema là nền tảng đặt vé xem phim hiện đại — nơi mang đến trải nghiệm điện ảnh chân thực,
                        tiện lợi và đẳng cấp. Xem phim dễ dàng, tận hưởng từng khoảnh khắc!
                    </p>
                </div>

                <div class="col-md-2">
                    <h6 class="fw-bold text-white mb-3">Khám phá</h6>
                    <ul class="list-unstyled text-muted small">
                        <li><a href="#" class="footer-link text-decoration-none text-secondary">Phim Hot</a></li>
                        <li><a href="#" class="footer-link text-decoration-none text-secondary">Phim Sắp Chiếu</a></li>
                        <li><a href="#" class="footer-link text-decoration-none text-secondary">Khuyến Mãi</a></li>
                    </ul>
                </div>

                <div class="col-md-2">
                    <h6 class="fw-bold text-white mb-3">Hỗ trợ</h6>
                    <ul class="list-unstyled text-muted small">
                        <li><a href="#" class="footer-link text-decoration-none text-secondary">Trung tâm trợ giúp</a></li>
                        <li><a href="#" class="footer-link text-decoration-none text-secondary">Điều khoản</a></li>
                        <li><a href="#" class="footer-link text-decoration-none text-secondary">Chính sách bảo mật</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <hr class="border-secondary my-4" />
        <div class="text-center text-muted small">
            © 2025 - <span class="text-danger fw-bold">TKT Team</span> — All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
            function showSuccessNotification(type, title, text, timer = 3000) {
            Swal.fire({
                toast: true,
                position: 'top',
                showConfirmButton: false,
                timer: timer,
                timerProgressBar: true,
                icon: type,
                title: title,
                text: text,
                background: '#fff',
                customClass: {
                    popup: 'shadow-sm rounded'
                }
            });
        }

        function showFailNotification(title, text, timer = 3000) {
            Swal.fire({
                toast: true,
                position: 'top',
                icon: 'error',
                title: title,
                html: text,
                showConfirmButton: false,
                timer: timer,
                timerProgressBar: true,
                background: '#fff',
                customClass: {
                    popup: 'shadow-sm rounded'
                }
            });
        }


        // Tự động hiện thông báo nếu có tempdata
        document.addEventListener('DOMContentLoaded', () => {
            var message = @Html.Raw(JsonSerializer.Serialize(TempData["NotificationMessage"]));
            var type = @Html.Raw(JsonSerializer.Serialize(TempData["NotificationType"]));
            var title = @Html.Raw(JsonSerializer.Serialize(TempData["NotificationTitle"]));

            if (type == "success" && title && message) {
                showSuccessNotification(type, title, message);
            }
            if (type == "error" && title && message) {
                showFailNotification(type, title, message);
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Styles", required: false)

</body>
</html>
