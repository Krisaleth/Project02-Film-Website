<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="simple-navbar navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="#">TKT Team</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon text-white"><i class="fa-solid fa-caret-down"></i></span>
            </button>

            <div class="navbar-collapse collapse navbar-dark">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="text-white nav-item mx-2"><a href="#" class="nav-link">Thể loại</a></li>
                    <li class="text-white nav-item mx-2"><a href="#" class="nav-link">Tất cả film</a></li>
                    <li class="text-white nav-item mx-2"><a href="#" class="nav-link">Điều khoản</a></li>
                    <li class="text-white nav-item mx-2"><a href="#" class="nav-link">Về chúng tôi</a></li>
                    <li class="text-white nav-item mx-2"><a href="#" class="nav-link">Trang cá nhân</a></li>
                </ul>

                <form class="navbar-search d-flex" method="get" action="#">
                    <input type="text" class="form-control me-2" name="q" placeholder="Tìm kiếm phim..." />
                    <button type="submit" aria-label="Tìm kiếm">
                        <span class="search-icon btn btn-secondary">&#128269;</span>
                    </button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Main Content -->
    <main class="container py-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-muted py-4 mt-5 border-top border-secondary">
        <div class="container text-center small">
            <div class="mb-1">
                &copy; 2025 <span class="text-danger fw-bold">TKT Cinema</span>. All rights reserved.
            </div>
            <div>
                Developed by <strong class="text-danger">TKT Team 🎬</strong>
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
