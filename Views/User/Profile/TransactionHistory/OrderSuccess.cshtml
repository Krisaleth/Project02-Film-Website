@model long

@{
    ViewData["Title"] = "Đặt vé thành công";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container text-center mt-5 pt-5 text-white">
    <h2>Đặt vé thành công!</h2>
    <p>Cám ơn bạn đã đặt vé. Bạn sẽ được chuyển tới trang lịch sử giao dịch trong giây lát.</p>
    <div class="spinner-border text-danger" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            window.location.href = '/User/Profile/TransactionHistory'; // Đường dẫn trang lịch sử giao dịch
        }, 3000);
    </script>
}
