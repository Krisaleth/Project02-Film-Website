@model Project02.ViewModels.Customer.UserProfileVm
@using Project02.Helpers
<link rel="stylesheet" href="~/css/userprofile.css"/>
@{
    ViewData["Title"] = "Thông tin cá nhân - TKT Cinema";
    Layout = "_Layout";
}

<div class="user-profile container py-5 mt-5">

    <!-- Header -->
    <div class="profile-header d-flex align-items-center gap-3 mb-3 flex-wrap">
        <div>
            <h2 class="mb-1" style="color: #FFD580;">@Model.User.User_Name</h2>
            <p class="mb-0 text-secondary" style="font-size:17px;color:#bdbdbd!important;">@Model.User.User_Email</p>
        </div>
        <a href="/change-password" class="btn btn-outline-warning ms-auto me-2">
            <i class="fa-solid fa-key me-1"></i> Đổi mật khẩu
        </a>
    </div>

    <ul class="nav nav-tabs" id="profileTab" role="tablist" style="border-bottom:1.5px solid #333;">
        <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#personalInfo">Thông tin cá nhân</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#ticketHistory">Lịch sử vé</button>
        </li>
    </ul>

    <div class="tab-content mt-4">

        <!-- Thông tin cá nhân -->
        <div class="tab-pane fade show active" id="personalInfo" role="tabpanel">
            <div class="profile-info-card p-4 mb-4 mx-auto" style="background:#181818;border-radius:14px;max-width:400px; min-width:260px;box-shadow:0 6px 24px 0 rgba(0,0,0,0.35); border:1.5px solid #292929;">
                <div class="row mb-3 align-items-center">
                    <div class="col-4 text-end fw-semibold" style="color:#FFD580;">Username:</div>
                    <div class="col-8" style="color:#fff;">@Model.User.User_Name</div>
                </div>
                <div class="row mb-3 align-items-center">
                    <div class="col-4 text-end fw-semibold" style="color:#FFD580;">Email:</div>
                    <div class="col-8" style="color:#fff;">@Model.User.User_Email</div>
                </div>
                <div class="row mb-3 align-items-center">
                    <div class="col-4 text-end fw-semibold" style="color:#FFD580;">Phone:</div>
                    <div class="col-8" style="color:#fff;">@Model.User.User_Phone</div>
                </div>
                <div class="text-center mt-4">
                    <a href="/profile/edit" class="btn btn-outline-warning fw-semibold px-4 py-2" style="border-radius:2rem;">Cập nhật thông tin</a>
                </div>
            </div>
        </div>

        <!-- Lịch sử vé -->
        <div class="tab-pane fade" id="ticketHistory" role="tabpanel">
            @if (Model.Orders != null && Model.Orders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped align-middle ticket-history-table w-100">
                        <thead>
                            <tr>
                                <th>Phim</th>
                                <th>Rạp / Phòng</th>
                                <th class="text-center">Ghế</th>
                                <th class="text-center">Ngày giờ chiếu</th>
                                <th class="text-center">Tổng tiền</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                var cinemaId = order.Showtime.Hall.Cinema.Cinema_ID;
                                var hallId = order.Showtime.Hall.Hall_ID;
                                int roomNumber = 0;
                                if (ViewBag.hallsByCinema != null && ViewBag.hallsByCinema.ContainsKey(cinemaId) && ViewBag.hallsByCinema[cinemaId].ContainsKey(hallId))
                                {
                                    roomNumber = ViewBag.hallsByCinema[cinemaId][hallId];
                                }
                                <tr>
                                    <td>@order.Showtime.Movie.Movie_Name</td>
                                    <td>Rạp @roomNumber - @order.Showtime.Hall.Cinema.Cinema_Name</td>
                                    <td class="text-center">@string.Join(", ", order.OrderSeats.Select(os => os.Seat.RowNumber + os.Seat.SeatNumber))</td>
                                    <td class="text-center">@order.Showtime.Start_Time.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center">@order.TotalAmount.ToString("N0") ₫</td>
                                    <td class="text-center">@order.Status</td>
                                    <td class="text-center">
                                        @if (order.Status == "Completed")
                                        {
                                            <a href="/profile/order/@IdEncodingHelper.EncodeId(order.Order_ID)" class="btn btn-outline-light btn-sm">Xem vé</a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-secondary btn-sm" disabled>Xem vé</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-light" style="margin-top:20px;">Bạn chưa có vé nào được đặt.</p>
            }
        </div>
    </div>
</div>




@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}


