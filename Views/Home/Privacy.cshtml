@model Project02.Models.Movie

<div class="movie-detail container py-5">

    <!-- ===== CSS ===== -->
    <style>
        body {
            background: #141414;
            color: #fff;
            font-family: "Poppins", sans-serif;
        }

        .movie-detail {
            background: #1c1c1c;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.6);
        }

        /* Poster */
        .poster-wrapper img {
            border-radius: 16px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s ease;
        }

            .poster-wrapper img:hover {
                transform: scale(1.03);
            }

        /* Movie info */
        .movie-title {
            font-size: 2.3rem;
            font-weight: 700;
            color: #FFD580;
            margin-bottom: 10px;
        }

        .movie-genres {
            font-size: 1rem;
            color: #b3b3b3;
            margin-bottom: 15px;
        }

        .movie-meta span {
            display: block;
            margin-bottom: 4px;
            color: #fff;
        }

        .movie-description {
            margin-top: 15px;
            line-height: 1.7;
            color: #FFD580;
        }

        /* Buttons */
        .btn {
            border-radius: 30px;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .btn-danger {
            background-color: #e50914;
            border: none;
            color: #fff;
        }

            .btn-danger:hover {
                background-color: #b81d24;
                transform: scale(1.05);
            }

        .btn-outline-light {
            border-color: #FFD580;
            color: #FFD580;
        }

            .btn-outline-light:hover {
                background-color: #FFD580;
                color: #111;
            }

        /* Showtimes table */
        .showtimes {
            margin-top: 30px;
            overflow-x: auto;
        }

            .showtimes h4 {
                color: #FFD580;
                margin-bottom: 20px;
            }

        .table {
            color: #fff;
            background-color: transparent;
            min-width: 800px;
        }

            .table th, .table td {
                border-color: #333;
                color: #fff;
            }

        .table-striped > tbody > tr:nth-of-type(odd) {
            background-color: rgba(255, 255, 255, 0.05);
        }

        .table-striped > tbody > tr:nth-of-type(even) {
            background-color: rgba(255, 255, 255, 0.02);
        }

        .btn-sm {
            font-size: 0.85rem;
            border-radius: 20px;
            background-color: #e50914;
            color: #fff;
        }

            .btn-sm:hover {
                background-color: #b81d24;
            }

        /* Seat Map */
        .seat-map {
            background: #1c1c1c;
            border-radius: 12px;
            padding: 20px;
            margin-top: 30px;
            overflow-x: auto;
        }

        .screen {
            background: #e50914;
            height: 22px;
            border-radius: 4px;
            text-align: center;
            color: #fff;
            font-weight: bold;
            letter-spacing: 2px;
        }

        .seats {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 25px;
        }

        .seat-row {
            display: flex;
            justify-content: center;
            gap: 10px;
            align-items: center;
        }

        .seat-label {
            width: 30px;
            text-align: center;
            color: #fff;
            font-weight: bold;
        }

        .seat {
            width: 45px;
            height: 45px;
            border-radius: 8px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 13px;
            font-weight: bold;
            transition: transform 0.2s;
        }

            .seat.vip {
                background-color: #FFD700;
                color: #111;
            }

            .seat.standard {
                background-color: #777;
                color: #fff;
            }

            .seat.sold {
                background-color: #333;
                color: #777;
                cursor: not-allowed;
            }

            .seat.selected {
                background-color: #e50914 !important;
                color: #fff !important;
            }

            .seat:hover:not(.sold):not(.selected) {
                transform: scale(1.1);
            }

        .seat-legend {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

            .seat-legend span {
                width: 35px;
                height: 35px;
                display: inline-block;
                border-radius: 6px;
            }

        /* Back Button */
        .btn-back {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background-color: transparent;
            color: #FFD580;
            border: 2px solid #FFD580;
            padding: 8px 18px;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.25s ease;
            margin-bottom: 20px;
            text-decoration: none;
        }

            .btn-back:hover {
                background-color: #FFD580;
                color: #111;
            }
    </style>

    <!-- ===== Nút Quay lại ===== -->
    <a href="javascript:history.back()" class="btn-back">
        <i class="fa fa-arrow-left"></i> Quay lại
    </a>

    <!-- ===== Movie Detail Info ===== -->
    <div class="row align-items-start g-4">
        <div class="col-md-4">
            <div class="poster-wrapper">
                <img src="@Model.Movie_Poster" alt="@Model.Movie_Name" class="img-fluid rounded shadow" />
            </div>
        </div>

        <div class="col-md-8">
            <h2 class="movie-title">@Model.Movie_Name</h2>
            <p class="movie-genres text-muted">
                @string.Join(", ", Model.Genres.Select(g => g.Genre_Name))
            </p>

            <div class="movie-meta mb-3">
                <span><strong>Thời lượng:</strong> @Model.Movie_Duration phút</span>
                <span><strong>Nhà sản xuất:</strong> @Model.Movie_Producer</span>
                <span><strong>Năm:</strong> @Model.Movie_Year</span>
            </div>

            <p class="movie-description">@Model.Movie_Description</p>

            <div class="mt-4">
                <a href="/booking/@Model.Movie_ID" class="btn btn-danger px-4">
                    <i class="fa fa-ticket-alt"></i> Đặt vé ngay
                </a>
            </div>
        </div>
    </div>

    <!-- ===== Showtimes Table ===== -->
    <div class="showtimes mt-5">
        <h4 class="mb-3">Suất chiếu hiện có</h4>
        <table class="table table-striped align-middle" id="showtimeTable">
            <thead>
                <tr>
                    <th>Rạp</th>
                    <th>Phòng chiếu</th>
                    <th>Bắt đầu</th>
                    <th>Kết thúc</th>
                    <th>Ngôn ngữ</th>
                    <th>Định dạng</th>
                    <th>Giá vé</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var show in Model.Showtimes)
                {
                    <tr>
                        <td>@show.Cinema.Cinema_Name</td>
                        <td>@show.Hall.Hall_ID</td>
                        <td>@show.Start_Time.ToString("HH:mm dd/MM/yyyy")</td>
                        <td>@show.End_Time.ToString("HH:mm dd/MM/yyyy")</td>
                        <td>@show.Language</td>
                        <td>@show.Format</td>
                        <td>@show.Price.ToString("N0") ₫</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-danger select-showtime"
                               data-showtime-id="@show.Showtime_ID"
                               data-price="@show.Price">Chọn</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- ===== Seat Map ===== -->
    <div class="seat-map mt-5">
        <h4 class="text-white mb-3">Chọn ghế</h4>

        <div class="screen mb-3">MÀN HÌNH</div>
        <div class="seats" id="seatContainer">Chọn suất chiếu để hiện ghế</div>

        <div class="mt-3 d-flex gap-3 justify-content-center align-items-center">
            <button id="resetSeats" class="btn btn-outline-light">Đặt lại</button>
            <div class="text-white">
                <strong>Tổng tiền:</strong> <span id="totalPrice">0</span> ₫
            </div>
        </div>

        <!-- Ghi chú -->
        <div class="seat-legend text-white">
            <div><span class="seat vip"></span> VIP</div>
            <div><span class="seat standard"></span> Phổ thông</div>
            <div><span class="seat sold"></span> Đã bán</div>
        </div>
    </div>

    <!-- ===== JavaScript ===== -->
    <script>
        const seatContainer = document.getElementById('seatContainer');
        const totalPriceEl = document.getElementById('totalPrice');
        const resetBtn = document.getElementById('resetSeats');

        let selectedSeats = [];
        let seatPrice = 0;

        // Tạo ghế
        function generateSeats(showtimeId, price) {
            seatContainer.innerHTML = '';
            selectedSeats = [];
            seatPrice = price;

            const rows = 12;
            const cols = 12;
            const letters = 'ABCDEFGHIJKL';

            for (let r = 0; r < rows; r++) {
                const rowDiv = document.createElement('div');
                rowDiv.classList.add('seat-row');

                const label = document.createElement('div');
                label.classList.add('seat-label');
                label.innerText = letters[r];
                rowDiv.appendChild(label);

                for (let c = 1; c <= cols; c++) {
                    const div = document.createElement('div');
                    div.classList.add('seat', r < 3 ? 'vip' : 'standard');
                    div.dataset.seat = letters[r] + c;
                    div.innerText = letters[r] + c;

                    if (Math.random() < 0.15) div.classList.add('sold');

                    div.addEventListener('click', () => {
                        if (div.classList.contains('sold')) return;
                        div.classList.toggle('selected');

                        if (div.classList.contains('selected')) {
                            selectedSeats.push(div.dataset.seat);
                        } else {
                            selectedSeats = selectedSeats.filter(s => s !== div.dataset.seat);
                        }

                        totalPriceEl.innerText = (selectedSeats.length * seatPrice).toLocaleString();
                    });

                    rowDiv.appendChild(div);
                }

                seatContainer.appendChild(rowDiv);
            }
        }

        // Chọn suất chiếu
        document.querySelectorAll('.select-showtime').forEach(btn => {
            btn.addEventListener('click', e => {
                e.preventDefault();
                const showtimeId = btn.dataset.showtimeId;
                const price = parseInt(btn.dataset.price);
                generateSeats(showtimeId, price);
            });
        });

        // Nút đặt lại
        resetBtn.addEventListener('click', () => {
            document.querySelectorAll('.seat.selected').forEach(s => s.classList.remove('selected'));
            selectedSeats = [];
            totalPriceEl.innerText = '0';
        });
    </script>
</div>
