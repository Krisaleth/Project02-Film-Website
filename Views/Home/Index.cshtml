@{
    Layout = "_Layout"; // layout dành cho user
    ViewData["Title"] = "Movies";
}

<div class="container py-5">
    <h2 class="mb-4 fw-bold text-center">🎬 Khám Phá Phim</h2>

    <style>
        /* Card phim */
        .film-card {
            border-radius: 12px;
            overflow: hidden;
            background: #fff;
            transition: transform 0.3s, box-shadow 0.3s;
            cursor: pointer;
        }

            .film-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 8px 24px rgba(0, 0, 0, .1);
            }

        .film-poster {
            width: 100%;
            aspect-ratio: 2/3;
            background: #f3f4f6;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #9ca3af;
            font-size: 14px;
        }

        .film-info {
            padding: .75rem;
            text-align: center;
        }

        .film-title {
            font-size: 1rem;
            font-weight: 600;
            color: #111827;
            margin: 0;
        }

        .film-year {
            font-size: .875rem;
            color: #6b7280;
        }
    </style>

    <div class="row g-4">
        @for (int i = 0; i < 8; i++)
        {
            <div class="col-6 col-md-4 col-lg-3">
                <div class="film-card">
                    <div class="film-poster">Poster</div>
                    <div class="film-info">
                        <p class="film-title">Tên phim</p>
                        <p class="film-year">2025</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
