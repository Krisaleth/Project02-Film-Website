        background-color: #b81d24;
        color: #fff;
    }

    .movie-overlay button:hover {
        transform: scale(1.1);
    }

    .badge {
        position: absolute;
        top: 8px;
        left: 8px;
        padding: 3px 6px;
        font-size: 12px;
        font-weight: bold;
        border-radius: 3px;
        color: #fff;
    }

    .badge-4k {
        background: #b81d24;
    }

    .badge-hd {
        background: #e50914;
    }

    .movie-info {
        padding: 10px;
    }

    .title-vi {
        font-size: 14px;
        margin: 0;
        color: #fff;
        font-weight: bold;
    }

    .title-en {
        font-size: 12px;
        margin: 4px 0 0;
        color: #b3b3b3;
    }

    /* Scroll Arrows */
    .arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0,0,0,0.6);
        border: none;
        color: #e50914;
        font-size: 24px;
        padding: 10px;
        cursor: pointer;
        z-index: 10;
        border-radius: 50%;
        transition: background 0.3s;
    }

        .arrow:hover {
            background: rgba(255,255,255,0.2);
        }

        .arrow.left {
            left: 0;
        }

        .arrow.right {
            right: 0;
        }

    /* Film Cards */
    .film-card {
        border-radius: 12px;
        overflow: hidden;
        background: #1c1c1c;
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
    }

        .film-card:hover {
            transform: translateY(-6px) scale(1.03);
            box-shadow: 0 8px 24px rgba(0,0,0,0.3);
            background: #2a2a2a;
        }

    .film-poster {
        position: relative;
        width: 100%;
        aspect-ratio: 2 / 3;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .film-overlay {
