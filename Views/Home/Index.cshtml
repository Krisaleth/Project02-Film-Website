@{
    Layout = "_Layout"; // layout dành cho user
    ViewData["Title"] = "Movies";
}

<!-- Navbar đẹp mắt + thanh tìm kiếm góc phải -->
<nav class="simple-navbar">
    <ul>
        <li><a href="#">#1</a></li>
        <li><a href="#">#2</a></li>
        <li><a href="#">#3</a></li>
        <li><a href="#">#4</a></li>
    </ul>
    <form class="navbar-search" method="get" action="#">
        <input type="text" name="q" placeholder="Tìm kiếm phim..." />
        <button type="submit" aria-label="Tìm kiếm">
            <span class="search-icon">&#128269;</span>
        </button>
    </form>
</nav>

<div class="container py-5">
    <h1 class="mb-4 fw-bold text-center" style="color: #fff;">🎬 Khám Phá Phim</h1>

    <div class="row g-4">
        @for (int i = 0; i < 8; i++)
        {
            <div class="col-6 col-md-4 col-lg-3">
                <div class="film-card">
                    <div class="film-poster">Poster</div>
                    <div class="film-info">
                        <p class="film-title">Tên phim</p>
                        <p class="film-year">2025</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #8E0E00;
        background: -webkit-linear-gradient(to right, #1F1C18, #8E0E00);
        background: linear-gradient(to right, #1F1C18, #8E0E00);
        min-height: 100vh;
        margin: 0;
        color: #333;
    }

    /* Navbar đẹp */
    .simple-navbar {
        width: 100%;
        background: rgba(30,30,30,0.97);
        box-shadow: 0 2px 8px rgba(0,0,0,0.09);
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        min-height: 56px;
        padding: 0 16px;
    }

        .simple-navbar ul {
            display: flex;
            align-items: center;
            height: 56px;
            list-style: none;
            gap: 30px;
            padding: 0;
            margin: 0;
        }

        .simple-navbar li a {
            color: #fff;
            font-size: 16px;
            text-decoration: none;
            font-weight: 500;
            letter-spacing: 0.5px;
            padding: 8px 18px;
            border-radius: 4px;
            transition: background 0.2s, color 0.2s;
        }

            .simple-navbar li a:hover {
                background: #f7931e;
                color: #fff;
            }

    /* Thanh tìm kiếm ở góc phải navbar */
    .navbar-search {
        display: flex;
        align-items: center;
        border: 1px solid #fff;
        border-radius: 2px;
        background: rgba(18, 18, 18, 0.9);
        padding-left: 8px;
        height: 34px;
        margin-left: 24px;
    }

        .navbar-search input[type="text"] {
            border: none;
            outline: none;
            background: transparent;
            color: #fff;
            width: 170px;
            font-size: 15px;
            padding: 0 6px;
        }

            .navbar-search input[type="text"]::placeholder {
                color: #b4b4b4;
            }

        .navbar-search button {
            background: none;
            border: none;
            color: #fff;
            font-size: 20px;
            cursor: pointer;
            padding: 0 8px;
        }

    .search-icon {
        vertical-align: middle;
    }

    /* Card phim */
    .film-card {
        border-radius: 12px;
        overflow: hidden;
        background: #fff;
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
        box-shadow: 0 4px 14px rgba(0,0,0,0.08);
    }

        .film-card:hover {
            transform: translateY(-6px) scale(1.03);
            box-shadow: 0 8px 24px rgba(0, 0, 0, .15);
        }

    .film-poster {
        width: 100%;
        aspect-ratio: 2/3;
        background: #f3f4f6;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #9ca3af;
        font-size: 14px;
    }

    .film-info {
        padding: .75rem;
        text-align: center;
        background: #fff;
    }

    .film-title {
        font-size: 1rem;
        font-weight: 600;
        color: #111827;
        margin: 0;
    }

    .film-year {
        font-size: .875rem;
        color: #6b7280;
    }
</style>