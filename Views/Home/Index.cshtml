        gap: 10px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .film-poster:hover .film-overlay {
        opacity: 1;
    }

    .film-overlay button {
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: bold;
        font-size: 14px;
    }

    .film-info {
        padding: 8px;
        text-align: center;
    }

    .film-title {
        font-size: 1rem;
        font-weight: 600;
        color: #fff;
        margin: 0;
    }

    .film-year {
        font-size: .875rem;
        color: #b3b3b3;
    }
</style>
