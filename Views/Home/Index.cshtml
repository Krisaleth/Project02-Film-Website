@{
    Layout = "_Layout";
    ViewData["Title"] = "Movies";
}

<!-- ===== Navbar ===== -->
<nav class="simple-navbar navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand fw-bold" href="#">TKT Team 🎬</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon text-white"></span>
    </button>

    <div class="navbar-collapse collapse navbar-dark">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item mx-2"><a href="#" class="nav-link">Thể loại</a></li>
            <li class="nav-item mx-2"><a href="#" class="nav-link">Tất cả phim</a></li>
            <li class="nav-item mx-2"><a href="#" class="nav-link">Điều khoản</a></li>
            <li class="nav-item mx-2"><a href="#" class="nav-link">Về chúng tôi</a></li>
            <li class="nav-item mx-2"><a href="#" class="nav-link">Trang cá nhân</a></li>
        </ul>

        <form class="navbar-search d-flex" method="get" action="#">
            <input type="text" class="form-control me-2" name="q" placeholder="Tìm kiếm phim..." />
            <button type="submit" class="btn btn-danger">🔍</button>
        </form>
    </div>
</nav>

<!-- ===== Main Content ===== -->
<div class="container py-5">

    <h1 class="mb-4 fw-bold text-left text-white">🎬 Khám Phá Phim</h1>

    <!-- ===== Banner Carousel ===== -->
    <div id="bannerCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="3500">
        <div class="carousel-indicators">
            @for (int i = 0; i < 6; i++)
            {
                <button type="button"
                        data-bs-target="#bannerCarousel"
                        data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "")"
                        aria-label="Slide @(i + 1)"></button>
            }
        </div>

        <div class="carousel-inner rounded">
            <div class="carousel-item active"><img src="~/Banner/poster-mua-do (1).jpg" class="d-block banner-img" alt="Banner 1" /></div>
            <div class="carousel-item"><img src="~/Banner/poster-film-5.jpg" class="d-block banner-img" alt="Banner 2" /></div>
            <div class="carousel-item"><img src="~/Banner/poster-film-6 (1).jpg" class="d-block banner-img" alt="Banner 3" /></div>
            <div class="carousel-item"><img src="~/Banner/poster-mua-do (1).jpg" class="d-block banner-img" alt="Banner 4" /></div>
            <div class="carousel-item"><img src="~/Banner/bannerADS2.jpg" class="d-block banner-img" alt="Banner 5" /></div>
            <div class="carousel-item"><img src="~/Banner/bannerADS3.png" class="d-block banner-img" alt="Banner 6" /></div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- ===== PHIM ĐỀ CỬ ===== -->
    <h3 class="movie-label">Phim đề cử</h3>

    <div class="movie-wrapper">
        <button class="arrow left">&#10094;</button>

        <div class="movie-container">
            @for (int i = 1; i <= 10; i++)
            {
                <div class="movie-card">
                    <div class="movie-img">
                        <img src="~/Poster/poster@(i).jpg" alt="Phim @(i)" />

                        <div class="movie-overlay">
                            <button class="btn-detail">🎬 Xem chi tiết</button>
                            <button class="btn-ticket">🎟 Mua vé</button>
                        </div>

                        <span class="badge badge-4k">4K</span>
                    </div>

                    <div class="movie-info">
                        <h3 class="title-vi">Phim Đề Cử @(i)</h3>
                        <p class="title-en">Recommended Movie @(i)</p>
                    </div>
                </div>
            }
        </div>

        <button class="arrow right">&#10095;</button>
    </div>

    <!-- ===== TẤT CẢ PHIM ===== -->
    <h3 class="movie-label mt-5">Tất cả phim</h3>

    <div class="row g-4">
        @for (int i = 0; i < 12; i++)
        {
            <div class="col-6 col-md-4 col-lg-3">
                <div class="film-card">
                    <div class="film-poster">
                        Poster @(i + 1)
                        <div class="film-overlay">
                            <button class="btn-detail">🎬 Xem chi tiết</button>
                            <button class="btn-ticket">🎟 Mua vé</button>
                        </div>
                    </div>
                    <div class="film-info">
                        <p class="film-title">Tên phim @(i + 1)</p>
                        <p class="film-year">2025</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- ===== Footer ===== -->
<footer class="footer mt-5">
    <div class="container text-center text-md-start">
        <div class="row">
            <div class="col-md-4 mb-4">
                <h5 class="fw-bold text-danger">TKT Team 🎬</h5>
                <p class="text-muted">Trang web đặt vé xem phim hiện đại – nơi trải nghiệm điện ảnh tuyệt vời nhất!</p>
            </div>

            <div class="col-md-2 mb-4">
                <h6 class="fw-bold text-white mb-3">Khám phá</h6>
                <ul class="list-unstyled text-muted">
                    <li><a href="#">Phim Hot</a></li>
                    <li><a href="#">Phim Sắp Chiếu</a></li>
                    <li><a href="#">Khuyến Mãi</a></li>
                </ul>
            </div>

            <div class="col-md-2 mb-4">
                <h6 class="fw-bold text-white mb-3">Hỗ trợ</h6>
                <ul class="list-unstyled text-muted">
                    <li><a href="#">Trung tâm trợ giúp</a></li>
                    <li><a href="#">Điều khoản</a></li>
                    <li><a href="#">Chính sách bảo mật</a></li>
                </ul>
            </div>
        </div>

        <hr class="border-secondary" />
        <div class="text-center text-muted small py-2">
            © 2025 TKT Team. All rights reserved.
        </div>
    </div>
</footer>

<!-- ===== JS ===== -->
<script>
    const container = document.querySelector('.movie-container');
    const leftBtn = document.querySelector('.arrow.left');
    const rightBtn = document.querySelector('.arrow.right');
    const scrollStep = 220;

    leftBtn.onclick = () => container.scrollBy({ left: -scrollStep, behavior: 'smooth' });
    rightBtn.onclick = () => container.scrollBy({ left: scrollStep, behavior: 'smooth' });

    // Auto slide phim đề cử
    setInterval(() => {
        if (container.scrollLeft + container.clientWidth >= container.scrollWidth - 5)
            container.scrollTo({ left: 0, behavior: 'smooth' });
        else
            container.scrollBy({ left: scrollStep, behavior: 'smooth' });
    }, 3000);
</script>

<!-- ===== CSS ===== -->
<style>
    /* ===== GLOBAL ===== */
    body {
        font-family: 'Inter', 'Poppins', sans-serif;
        background: #141414;
        color: #fff;
        margin: 0;
    }

    /* ===== NAVBAR ===== */
    .simple-navbar {
        background: rgba(20, 20, 20, 0.97);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        padding: 0 16px;
    }

        .simple-navbar a.nav-link:hover {
            background: #e50914;
            border-radius: 6px;
        }

    /* ===== BANNER ===== */
    .banner-img {
        width: 100%;
        height: 480px;
        object-fit: cover;
        border-radius: 12px;
    }

    /* ===== PHIM ĐỀ CỬ ===== */
    .movie-wrapper {
        position: relative;
        overflow: hidden;
        padding: 10px 0;
    }

    .movie-container {
        display: flex;
        gap: 18px;
        overflow-x: scroll;
        scroll-behavior: smooth;
        padding: 10px;
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE 10+ */
    }

        .movie-container::-webkit-scrollbar {
            display: none; /* Chrome, Safari, Edge */
        }

    .movie-card {
        flex: 0 0 auto;
        width: 190px;
        background: #1c1c1c;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        position: relative;
    }

        .movie-card:hover {
            transform: scale(1.07);
            box-shadow: 0 6px 16px rgba(0,0,0,0.4);
        }

    .movie-img {
        position: relative;
        aspect-ratio: 2 / 3;
        overflow: hidden;
    }

        .movie-img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Overlay */
    .movie-overlay {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 12px;
        background: rgba(0, 0, 0, 0.75);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .movie-img:hover .movie-overlay {
        opacity: 1;
    }

    /* Buttons */
    .btn-detail, .btn-ticket {
        border: none;
        width: 120px;
        padding: 10px 0;
        border-radius: 8px;
        font-weight: 600;
        font-size: 14px;
        color: #fff;
        cursor: pointer;
        transition: all 0.25s ease;
    }

    .btn-detail {
        background: linear-gradient(135deg, #e50914, #b81d24);
    }

    .btn-ticket {
        background: linear-gradient(135deg, #b81d24, #8b0000);
    }

        .btn-detail:hover, .btn-ticket:hover {
            transform: scale(1.05);
            box-shadow: 0 0 12px rgba(229, 9, 20, 0.5);
        }

    /* Badge */
    .badge-4k {
        position: absolute;
        top: 8px;
        left: 8px;
        background: #e50914;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: bold;
    }

    /* Info */
    .movie-info {
        padding: 10px;
        text-align: center;
    }

    .title-vi {
        font-size: 15px;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .title-en {
        font-size: 13px;
        color: #aaa;
    }

    /* Scroll arrows */
    .arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0,0,0,0.6);
        border: none;
        color: #e50914;
        font-size: 26px;
        padding: 10px;
        border-radius: 50%;
        cursor: pointer;
        z-index: 2;
    }

        .arrow.left {
            left: 5px;
        }

        .arrow.right {
            right: 5px;
        }

    /* ===== TẤT CẢ PHIM ===== */
    .film-card {
        background: #1c1c1c;
        border-radius: 10px;
        text-align: center;
        transition: transform 0.3s, background 0.3s;
    }

        .film-card:hover {
            transform: scale(1.05);
            background: #2a2a2a;
        }

    .film-poster {
        position: relative;
        aspect-ratio: 2 / 3;
        overflow: hidden;
        background: #333;
        color: #ccc;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .film-overlay {
        opacity: 0;
        background: rgba(0,0,0,0.7);
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 10px;
        transition: opacity 0.3s;
    }

    .film-poster:hover .film-overlay {
        opacity: 1;
    }

    .film-info {
        padding: 10px;
    }

    .film-title {
        font-weight: 600;
        margin: 0;
    }

    /* ===== FOOTER ===== */
    footer a {
        color: #ccc;
        text-decoration: none;
    }

        footer a:hover {
            color: #fff;
        }

</style>