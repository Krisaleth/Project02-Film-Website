@using Project02.ViewModels.User
@model UserEditVm

@{
    ViewData["Title"] = "Edit User";
    Layout = "_AdminLayout";
}
<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <form asp-action="Edit" method="post">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            A form to edit user value
                        </h3>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="User_ID" />
                        <input type="hidden" asp-for="RowsVersion" />
                        <div class="form-group">
                            <label class="form-label"><strong>User Name</strong></label>
                            <input asp-for="User_Name" class="form-control" />
                            <span asp-validation-for="User_Name"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label"><strong>Full Name</strong></label>
                            <input asp-for="User_FullName" class="form-control" />
                            <span asp-validation-for="User_FullName"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label"><strong>Email</strong></label>
                            <input asp-for="User_Email" class="form-control" />
                            <span asp-validation-for="User_Email"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label"><strong>Phone</strong></label>
                            <input asp-for="User_Phone" class="form-control" />
                            <span asp-validation-for="User_Phone"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label"><strong>Status</strong></label>
                            <select asp-for="Account_Status" class="form-select">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="Banned">Banned</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-outline-secondary float-end">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
