@model Project02.ViewModels.Genre.GenreCreateVm

@{
    ViewData["Title"] = "Create New Genre";
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <form asp-action="Create">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            A Form to add new genre
                        </h3>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label my-1"><strong>Name</strong></label>
                            <input asp-for="Genre_Name" class="form-control" />
                            <span asp-validation-for="Genre_Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-outline-secondary float-end">Back to List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
